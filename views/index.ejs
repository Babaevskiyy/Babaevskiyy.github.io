<%- include('layout/header') %>

<style>
    #products-table th,
    #products-table td {
        text-align: center;
        vertical-align: middle;
    }
</style>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
            <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                <strong><%= message.message %></strong>
            </div>
            <% } %>
            <div class="table-responsive">
                <% if (products.length > 0) { %>
                    <table id="products-table" class="table table-striped text-center my-3">
                        <thead>
                            <tr class="table-dark">
                                <th>ID</th>
                                <th>Фото товара</th>
                                <th>Имя товара</th>
                                <th>Количество товара</th>
                                <th>Куплено</th>
                                <th>Продано</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% products.forEach((row, index) => { %>
                                <tr>
                                    <td><%= index %></td>
                                    <td><img src="<%= row.image %>" width="70" class="img-thumbnail"></td>
                                    <td><%= row.name %></td>
                                    <td><%= row.count %></td>
                                    <td><%= row.bought %></td>
                                    <td><%= row.sold %></td>
                                    <td>
                                        <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                  
                                        <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text">Товаров в базе данных не найдено!</h1>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>
