<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-center">
                    <h3 class="text-light">Добавить новый товар</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/add" method="post" id="add-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name">Имя товара</label>
                            <input type="text" name="name" class="form-control form-control-lg" placeholder="Введите имя" required />
                        </div>
                        <div class="mb-3">
                            <label for="name">Количество товара</label>
                            <input type="number" name="count" class="form-control form-control-lg" placeholder="Введите число" required />
                        </div>
                        <div class="mb-3">
                            <label for="name">Куплено</label>
                            <input type="number" name="bought" class="form-control form-control-lg" placeholder="Введите число" required />
                        </div>
                        <div class="mb-3">
                            <label for="name">Продано</label>
                            <input type="number" name="sold" class="form-control form-control-lg" placeholder="Введите число" required />
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Фото товара</label>
                            <input class="form-control form-control-lg" type="file" name="image" required />
                        </div>
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Добавить" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>